<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_stock_ticker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="AAPL" />

    <TextView
        android:id="@+id/tv_stock_price"
        android:layout_width="0dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_stock_ticker"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$120" />

    <TextView
        android:id="@+id/tv_stock_companny_name"
        android:layout_width="0dp"
        tools:text="Apple Inc."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_ticker"  android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>